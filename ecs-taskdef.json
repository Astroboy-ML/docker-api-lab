// ECS Task Definition pour docker-api-lab
{
  // Nom logique de la task definition (utilisé dans le service ECS)
  "family": "docker-api-task",

  // Mode réseau requis pour Fargate (attribue une ENI dédiée à chaque task)
  "networkMode": "awsvpc",

  // Compatibilité Fargate + ressources CPU/RAM allouées à chaque task
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",

  // Rôle IAM utilisé par l'agent ECS pour pull l'image ECR + publier les logs
  "executionRoleArn": "arn:aws:iam::424051098783:role/ecsTaskExecutionRole",

  // Rôle IAM exposé à l'application (permet de consommer d'autres services AWS)
  "taskRoleArn": "arn:aws:iam::424051098783:role/ecsTaskExecutionRole",

  // Définition des conteneurs embarqués dans la task
  "containerDefinitions": [
    {
      "name": "docker-api-container",

      // Image conteneur poussée dans Amazon ECR (tag remplacé par le pipeline)
      "image": "424051098783.dkr.ecr.eu-west-3.amazonaws.com/docker-api-lab:latest",
      "essential": true,

      // Port exposé par Flask/Gunicorn (mappé par ALB target group)
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],

      // Logs envoyés vers CloudWatch Logs (`/ecs/docker-api-task`, région eu-west-3)
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "eu-west-3",
          "awslogs-group": "/ecs/docker-api-task",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
